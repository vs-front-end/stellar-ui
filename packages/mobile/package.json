{
  "name": "@stellar-ui/mobile",
  "version": "0.1.0",
  "description": "React Native UI components library - Stellar UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "react-native",
    "expo",
    "ui-components",
    "design-system",
    "nativewind"
  ],
  "author": "Stellar UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vs-front-end/stellar-ui.git",
    "directory": "packages/mobile"
  },
  "homepage": "https://stellar-ui.vercel.app",
  "bugs": {
    "url": "https://github.com/vs-front-end/stellar-ui/issues"
  },
  "dependencies": {
    "@rn-primitives/slot": "^1.0.0",
    "@stellar-ui/shared": "*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "nativewind": "^4.1.7",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-native": "^0.76.0",
    "react-native-safe-area-context": "^4.12.0",
    "react-native-svg": "^15.0.0"
  }
}
